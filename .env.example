# MongoDB Atlas connection string (database name: TalentX)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/TalentX?retryWrites=true&w=majority

# Google Gemini API key (for job description generation and match scoring)
GEMINI_API_KEY=your_gemini_api_key
# Optional: model name (default: gemini-2.0-flash). If 404, try gemini-1.5-flash-latest or gemini-pro
# GEMINI_MODEL=gemini-2.0-flash

# Firebase Admin (choose one option)
# Option A: path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./path/to/serviceAccountKey.json

# Option B: inline credentials (e.g. in production env)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Optional
PORT=3000
